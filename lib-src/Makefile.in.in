## ==================== Things "configure" will edit ====================

@SET_MAKE@
SHELL = /bin/sh
RM = rm -f
pwd = /bin/pwd

CC=@CC@
CPP=@CPP@
CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@
LDFLAGS=@LDFLAGS@
ALLOCA=@ALLOCA@
LN_S=@LN_S@
version=@version@

## This will be the name of the generated binary and is set automatically
## by configure.
PROGNAME=@PROGNAME@

## ==================== Where To Install Things ====================

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@
srcdir=@srcdir@
datadir=@datadir@
instvardir=@instvardir@
top_srcdir=@top_srcdir@
archlibdir=@archlibdir@
configuration=@configuration@
moduledir=@moduledir@
sitemoduledir=@sitemoduledir@

## ==================== Utility Programs for the Build =================

INSTALL = @install_pp@ @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

## ========================== Lists of Files ===========================

#define NO_SHORTNAMES
#define NOT_C_CODE
#include "../src/config.h"

#ifndef WIN32_NATIVE
#define INSTALL_GNUSERV
#endif

## ----------------------------------------------------------------
## Things that a user might actually run directly,
## which should be installed in ${bindir}.

PUBLIC_INSTALLABLE_EXES=\
#ifdef INSTALL_GNUSERV
 gnuclient\
#endif
#ifdef HAVE_SHLIB
 ellcc\
#endif
#ifdef HAVE_MS_WINDOWS
 winclient\
#endif
 etags ctags b2m ootags

PUBLIC_INSTALLABLE_SCRIPTS=\
#ifdef INSTALL_GNUSERV
 gnudoit gnuattach\
#endif
